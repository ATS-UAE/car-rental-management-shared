{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"lib": ["dom", "es7"],
		"allowJs": true,
		"outDir": "./build",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"exclude": ["sequelize"]
}
